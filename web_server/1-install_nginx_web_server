#!/usr/bin/env bash
# Bash script to install and configure Nginx on a new Ubuntu machine

# Update package list before installing Nginx
sudo apt-get update -y

# Install Nginx
sudo apt-get install nginx -y

# Create a custom HTML page with the desired string
echo "Holberton School for the win!" | sudo tee /var/www/html/index.html > /dev/null

# Print the content of the HTML file for debugging
echo "Content of /var/www/html/index.html:"
cat /var/www/html/index.html

# Configure Nginx to use the custom HTML page
sudo sed -i '/server_name\s*localhost;/a \\n\tlocation \/ {\n\t\troot \/var\/www\/html;\n\t\tindex index.html;\n\t}\n' /etc/nginx/sites-available/default

# Print the modified Nginx configuration for debugging
echo "Modified Nginx Configuration:"
cat /etc/nginx/sites-available/default

# Restart Nginx to apply the changes
sudo service nginx restart

# Ensure Nginx is listening on port 80
if sudo lsof -i :80; then
    echo "Nginx is listening on port 80"
else
    echo "Error: Nginx is not listening on port 80"
fi

# Test the Nginx server using curl
response=$(curl -s http://localhost)
expected="Holberton School for the win!"

# Print debug information
echo "Response from Nginx server:"
echo "$response"

# Check if the response contains the expected string
if [[ "$response" == *"$expected"* ]]; then
    echo "Nginx installation and configuration successful!"
else
    echo "Error: Nginx configuration failed. Check Nginx error logs for more information."
fi
